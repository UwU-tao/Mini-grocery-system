<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="100.0" prefWidth="870.0" styleClass="right-bar" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CartItemController">
   <children>
      <CheckBox alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="160.0" prefWidth="40.0" textAlignment="CENTER" />
      <ImageView fx:id="img" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
         <viewport>
            <Rectangle2D />
         </viewport></ImageView>
      <Label fx:id="product" alignment="CENTER" contentDisplay="CENTER" prefHeight="150.0" prefWidth="300.0" text="Product" textAlignment="CENTER">
         <font>
            <Font name="Cambria" size="18.0" />
         </font></Label>
      <Label fx:id="unitprice" prefHeight="185.0" prefWidth="80.0" text="Unit Price" textAlignment="CENTER">
         <font>
            <Font name="Cambria" size="18.0" />
         </font></Label>
      <Label fx:id="quantity" alignment="CENTER" prefHeight="185.0" prefWidth="80.0" text="Quantity" textAlignment="CENTER">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
      </Label>
      <Label fx:id="totalprice" alignment="CENTER" prefHeight="153.0" prefWidth="100.0" text="Total price" textFill="RED">
         <font>
            <Font name="Cambria" size="18.0" />
         </font></Label>
      <Button fx:id="delete" mnemonicParsing="false" prefHeight="35.0" prefWidth="74.0" styleClass="transparent" stylesheets="@Css/style.css" text="Delete" underline="true">
         <font>
            <Font name="Cambria" size="18.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets left="20.0" />
   </padding>
</HBox>
